<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_sertifikatvaksin"
	android:layout_marginStart="20dp"
	android:layout_marginEnd="20dp"
	android:layout_marginTop="30dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_arrow_back"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="22sp"
				android:textColor="@color/black"
				android:text="Detail Sertifikkat Vaksin"
				android:layout_marginBottom="3dp"
				android:textAlignment="center"
				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@drawable/bg_detail_sertifikat"
			android:elevation="3dp"
			android:padding="10dp">
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Sertifikat Vaksinasi COVID-19"
				android:textColor="@color/biru1"
				android:textAlignment="center"
				android:layout_marginTop="5dp"
				android:textSize="20sp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="sertifikat ini deberikan kepada :"
				android:textColor="@color/biru1"
				android:textAlignment="center"
				android:textSize="16sp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Nama"
				android:textColor="@color/biru1"
				android:textAlignment="center"
				android:layout_marginTop="10dp"
				android:textSize="16sp"/>

			<TextView
				android:layout_width="100dp"
				android:layout_height="1dp"
				android:background="@color/abu2"
				android:layout_gravity="center"
				android:layout_marginTop="3dp"
				/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:textAlignment="center"
				android:textColor="@color/biru1"
				android:text="ID Sertfikat : 12345"
				android:layout_marginTop="10dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:textAlignment="center"
				android:textColor="@color/biru1"
				android:text="Telah melaksanakan vaksinasi"
				android:layout_marginTop="20dp"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:textAlignment="center"
				android:textColor="@color/biru1"
				android:text="COVID-19 PERTAMA, pada tanggal :"
				/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:textAlignment="center"
				android:textColor="@color/biru1"
				android:text="19 april 2021"
				/>

		</LinearLayout>


	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
